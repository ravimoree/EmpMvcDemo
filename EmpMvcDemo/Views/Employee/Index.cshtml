@*@model IEnumerable<>*@

@model IPagedList<EmpMvcDemo.Models.Employee>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    .field-icon {
        float: right;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }

    .residntl_detl_banner h2 {
        font-size: 50px;
        color: #fff;
        line-height: 60px;
        text-shadow: 0 3px 5px #000000;
    }

    .central-border2 {
        display: inline-block;
        position: relative;
        height: 1px;
        background: #330000;
        width: 40%;
        margin-top: 10px;
    }

        .central-border2:before {
            position: absolute;
            height: 10px;
            background: #330000;
            width: 50%;
            content: "";
            left: 50%;
            transform: translateX(-50%);
            top: -5px;
        }
</style>
@*<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link href="https://cdn.datatables.net/searchbuilder/1.3.2/css/searchBuilder.dataTables.min.css" />

<link href="https://cdn.datatables.net/datetime/1.1.2/css/dataTables.dateTime.min.css" />*@

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered display" id="tblEmployee">
    <tr>
        <th>
            Employee Code
        </th>
        <th>
            First Name
        </th>
        <th>
            Middle Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            DOB
        </th>
        <th>
            Age
        </th>
        <th>
            @Html.ActionLink("Gender", "Index", new { Sorting_Order = ViewBag.SortingName })  
        </th>
        <th>
            ContactNo
        </th>
        <th>
            Email
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EId }, new { onclick = "return confirm('Are you sure you want to delete?')" })
            </td>
        </tr>
    }

</table>
<div style="margin-top: -3%;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }),
                              new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
</div>
